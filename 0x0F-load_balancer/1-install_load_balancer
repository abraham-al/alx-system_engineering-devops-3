#!/usr/bin/env bash
# install configure load balancer
sudo apt-get update -y
sudo apt-get install --no-install-recommends software-properties-common -y
sudo add-apt-repository ppa:vbernat/haproxy-2.0 -y
sudo apt-get update -y
sudo apt-get install haproxy=2.0.\* -y
sudo echo "listen http-in" >> "/etc/haproxy/haproxy.cfg"
sudo echo "/tbind *:80" >> "/etc/haproxy/haproxy.cfg"
sudo echo "/tserver 141-web-01 	35.185.27.173" >> "/etc/haproxy/haproxy.cfg"
sudo echo "/tserver 141-web-02 	34.74.146.120" >> "/etc/haproxy/haproxy.cfg"
sudo echo "" >> "/etc/haproxy/haproxy.cfg"

sudo service haproxy restart
