#!/usr/bin/env bash
# iredirect nginx
sudo apt-get update -y
sudo apt-get install nginx -y
sudo ufw enable
sudo ufw allow 'nginx HTTP'
sudo echo "Holberton School" > /var/www/html/index.nginx-debian.html
if [$request_filename ~ "35.227.56.113/redirect_me"]
then
  rewrite ^ https://www.youtube.com/watch?v=Gbz2C2gQREI;
fi
server_name 34.198.248.145/redirect_me/;
rewrite ^/$ https://www.youtube.com/watch?v=Gbz2C2gQREI permanent;
sudo service nginx restart
